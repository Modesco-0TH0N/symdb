{% extends 'base.html.twig' %}


{% block main %}
    <main class="main row">

        <div class="sidebar col-12 col-sm-5 col-lg-3">
            {{ include('./sidebar.html.twig', {'newUser' : 'active'}) }}
        </div>

        <div class="general col-12 col-sm-7 col-lg-9">
            {{ form_start(form) }}

            <div class="form-group">
                <label for="form_username">New login:</label>
                {{ form_widget(form.username, { 'attr': {
                        'class': 'form-control',
                        'type': 'text',
                        'placeholder': 'Enter new login'
                } }) }}

                {% if errors.username is defined %}
                    {% for error in errors.username %}
                        <p class="font-italic alert alert-danger">{{ error.message }}</p>
                    {% endfor %}
                {% endif %}
            </div>

            <div class="form-group">
                <label for="form_plainPassword">New password:</label>
                {{ form_widget(form.plainPassword, { 'attr': {
                    'class': 'form-control',
                    'type': 'password',
                    'placeholder': 'Enter new password'
                } }) }}

                {% if errors.plainPassword is defined %}
                    {% for error in errors.plainPassword %}
                        <p class="font-italic alert alert-danger">{{ error.message }}</p>
                    {% endfor %}
                {% endif %}
            </div>

            {{ form_widget(form.save, { 'attr': {
                'type': 'submit',
                'class': 'btn btn-primary'
            } }) }}

            {{ form_end(form) }}
        </div>
    </main>
{% endblock %}




