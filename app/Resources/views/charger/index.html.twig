{% extends 'base.html.twig' %}


{% block main %}
    <div>Charge your balance</div>
    <br>

    {% if app.user != null %}
        {{ form_start(form) }}

        <div class="form-group">
            <label for="form_amount">{{ tick }}</label>
            :&nbsp
            {{ form_widget(form.amount, { 'attr': {
                'class': 'form-control',
                'type': 'text',
                'placeholder': 'Enter amount'
            } }) }}
        </div>


        {{ form_widget(form.save, { 'attr': {
            'type': 'submit',
            'class': 'btn btn-primary'
        } }) }}

        {{ form_end(form) }}
    {% else %}
        Please, login to your account.
    {% endif %}

{% endblock %}




